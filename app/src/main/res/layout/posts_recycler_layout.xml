<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    android:clipChildren="false"
    android:divider="@android:color/transparent"
    android:dividerHeight="0.0px"
    android:foreground="?attr/selectableItemBackground"
    android:layout_marginStart="@dimen/_12sdp"
    android:layout_marginTop="@dimen/_10sdp"
    android:layout_marginEnd="@dimen/_12sdp"
    android:layout_marginBottom="@dimen/_8sdp"
    app:cardCornerRadius="@dimen/_12sdp"
    app:cardElevation="@dimen/_5sdp"
    >

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image"
            android:layout_width="@dimen/_31sdp"
            android:layout_height="@dimen/_31sdp"
            android:layout_marginStart="@dimen/_8sdp"
            android:src="@drawable/testingimae"
            android:layout_marginTop="@dimen/_12sdp"
            />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_14sdp"
            android:layout_toEndOf="@+id/image"
            android:paddingEnd="@dimen/_10sdp"
            android:text="@string/username"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_13ssp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_below="@+id/name"
            android:layout_toEndOf="@+id/image"
            android:paddingEnd="@dimen/_10sdp"
            android:text="2 days ago"
            android:textStyle="bold"
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/_9ssp"
            />

        <TextView
            android:id="@+id/descriptionTtile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/time"
            android:text="Hello Mister How Are You ? "
            android:textStyle="bold"
            android:textSize="@dimen/_10ssp"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/descriptiontext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/descriptionTtile"
            android:text="How are you baby"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:textColor="@color/black" />

        <android.support.v7.widget.CardView
            android:id="@+id/newsFeedImageCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/white"
            android:layout_below="@+id/descriptiontext"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            app:cardCornerRadius="@dimen/_8sdp">

            <ImageView
                android:id="@+id/newsFeedImage"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_280sdp"
                android:layout_below="@+id/image"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/img2"
                />


        </android.support.v7.widget.CardView>


    </RelativeLayout>


</android.support.v7.widget.CardView>